<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

  <title>OTP Verification</title>
  <link rel="stylesheet" href="/css/otp.css">
</head>
<body>
  <%- include("./loginnav") %>
  <div class="theme-icon">
    <i class="uil uil-moon"></i>
  </div>
  <div class="container">
    <h2>Enter OTP</h2>
    <form class="otp-form" method="post" action="/verify/<%= locals.params %>">
      <div class="digit-input d-flex">
      <input type="text" maxlength="1" name="digit1" class="otp-input form-control" required>
      <input type="text" maxlength="1" name="digit2" class="otp-input  form-control" required>
      <input type="text" maxlength="1" name="digit3" class="otp-input  form-control" required>
      <input type="text" maxlength="1" name="digit4" class="otp-input  form-control" required></div>
      <input type="submit" value="Submit" class="submit-btn">
    </form>
    <div class="alert"><%=locals.alert %></div>
  </div>
</body>
<script>

if(localStorage.getItem("theme") == "dark"){
  $("body").addClass("dark-theme");
  $(".theme-icon i").addClass("uil-sun")
  $(".theme-icon i").removeClass("uil-moon")
}
else if(localStorage.getItem("theme") == "light") {
  $("body").removeClass("dark-theme");
  $(".theme-icon i").addClass("uil-moon")
  $(".theme-icon i").removeClass("uil-sun")
}

$(".theme-icon").on("click" , function(){
  $("body").toggleClass("dark-theme");
  if($("body").hasClass("dark-theme")){
    $(".theme-icon i").addClass("uil-sun")
    $(".theme-icon i").removeClass("uil-moon")
    localStorage.setItem("theme", "dark")
  }
  else{
    $(".theme-icon i").addClass("uil-moon")
    $(".theme-icon i").removeClass("uil-sun")
    localStorage.setItem("theme", "light")
  }
})
</script>
</html>
